<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ToDo.ViewModels"
             x:Class="ToDo.Pages.EditPage"
             x:DataType="vm:EditViewModel"
             Title="EditPage">

    <VerticalStackLayout Margin="20,10">
        <Label>
            <Label.FormattedText>
                <FormattedString>
                    <Span Text="Title" />
                    <Span Text="*" TextColor="Red" />
                </FormattedString>
            </Label.FormattedText>
        </Label>
        <Entry Text="{Binding Title}" FontSize="16" />

        <Label Text="Description" />
        <Editor Text="{Binding Description}" FontSize="16" HeightRequest="200" />
        
        <HorizontalStackLayout>
            <CheckBox IsChecked="{Binding IsCompleted}" VerticalOptions="Center" />
            <Label Text="Is completed" VerticalTextAlignment="Center" VerticalOptions="Center" />
        </HorizontalStackLayout>
        
        <HorizontalStackLayout HorizontalOptions="Center" Spacing="20">
            <Button
                Text="Save"
                Command="{Binding SaveCommand}"
                FontSize="16"
                HeightRequest="20"
                WidthRequest="80" />
            <Button
                Text="Delete"
                Command="{Binding DisplayPopupCommand}"
                FontSize="16"
                BackgroundColor="Red"
                HeightRequest="20"
                WidthRequest="80" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>